<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/test_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F9"
    android:orientation="vertical">

    <com.alipay.mobile.antui.basic.AUTextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/drawable_gradient_bg"
        android:gravity="center"
        android:text="AntUI 实例"
        android:textColor="#FFFFFF" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/AU_COLOR_LINE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/AU_COLOR_UNIVERSAL_BG"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.alipay.mobile.antui.bar.AUTabBarItem
            android:id="@+id/tab_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="组件"
            android:textSize="10dp"
            android:textColor="@drawable/tab_text_color"
            app:topIconSid="@drawable/drawable_tab_common"
            app:topIconSize="20dp" />
<!--        app:textColor="@drawable/tab_text_color"-->
        <com.alipay.mobile.antui.bar.AUTabBarItem
            android:id="@+id/tab_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="场景(建设中)"
            android:textSize="10dp"
            android:textColor="@drawable/tab_text_color"
            app:topIconSid="@drawable/drawable_tab_scene"
            app:topIconSize="20dp" />
<!--        app:textColor="@color/tab_text_color"-->
    </LinearLayout>

</LinearLayout>