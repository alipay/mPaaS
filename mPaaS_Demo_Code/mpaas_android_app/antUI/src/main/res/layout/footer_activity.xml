<?xml version="1.0" encoding="utf-8"?>
<com.alipay.mobile.antui.basic.AURelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <com.mpaas.antui.viewdemo.view.DemoTitleBar
        android:layout_width="match_parent"
        android:id="@+id/title"
        android:layout_height="wrap_content"
       app:aui_titleText="Footer" />


    <com.alipay.mobile.antui.basic.AULinearLayout
        android:layout_below="@id/title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mpaas.antui.viewdemo.view.BaseHeadView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           app:aui_titleText="Footer" />
        <com.alipay.mobile.antui.common.AUPageFooterView
            android:layout_marginTop="16dp"
            android:id="@+id/footer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.alipay.mobile.antui.common.AUPageFooterView>
        <com.alipay.mobile.antui.common.AUPageFooterView
            android:id="@+id/footer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.alipay.mobile.antui.common.AUPageFooterView>
        <com.alipay.mobile.antui.common.AUPageFooterView
            android:id="@+id/footer3"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.alipay.mobile.antui.common.AUPageFooterView>
        <com.alipay.mobile.antui.common.AUPageFooterView
            android:id="@+id/footer4"
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.alipay.mobile.antui.common.AUPageFooterView>
    </com.alipay.mobile.antui.basic.AULinearLayout>


    <com.mpaas.antui.viewdemo.view.BaseFootView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</com.alipay.mobile.antui.basic.AURelativeLayout>